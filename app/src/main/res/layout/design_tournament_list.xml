<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="5dp"
    app:strokeWidth="0dp"
    android:backgroundTint="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp"
            app:strokeWidth="0dp"
            android:backgroundTint="@color/light_blue_background_color"
            >
            <TextView
                android:id="@+id/dateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3:00 PM 10/10/23"
                android:textSize="12sp"
                android:layout_marginHorizontal="5dp"
                android:fontFamily="@font/airbnbcereal_bk"
                android:textColor="@color/black"
                android:layout_gravity="center"
                />
        </com.google.android.material.card.MaterialCardView>
        <RelativeLayout
            android:layout_width="145dp"
            android:layout_height="40dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="12dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Prize : "
                android:textSize="14sp"
                android:textColor="@color/text_color_grey"
                android:fontFamily="@font/airbnbcereal_bk"
                android:layout_centerVertical="true"
                />
            <com.google.android.material.card.MaterialCardView
                android:layout_width="75dp"
                android:layout_height="40dp"
                app:strokeWidth="0dp"
                android:backgroundTint="@color/light_blue_background_color"
                app:cardCornerRadius="10dp"
                android:layout_alignParentRight="true"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    >
                    <TextView
                        android:id="@+id/totalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="160"
                        android:textSize="14sp"
                        android:textColor="@color/text_color_black"
                        android:fontFamily="@font/airbnbcereal_md"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Rs"
                        android:textSize="14sp"
                        android:textColor="@color/text_color_black"
                        android:fontFamily="@font/airbnbcereal_md"
                        />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remaining Entry: "
                android:textSize="12sp"
                android:textColor="@color/text_color_grey"
                android:fontFamily="@font/airbnbcereal_bk"
                />
            <TextView
                android:id="@+id/remainingEntries"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="12sp"
                android:textColor="@color/text_color_black"
                android:fontFamily="@font/airbnbcereal_bk"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textSize="12sp"
                android:textColor="@color/text_color_black"
                android:fontFamily="@font/airbnbcereal_bk"
                />
            <TextView
                android:id="@+id/maxEntries"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25"
                android:textSize="12sp"
                android:textColor="@color/text_color_black"
                android:fontFamily="@font/airbnbcereal_bk"
                />
        </LinearLayout>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="70dp"
            android:layout_height="20dp"
            app:strokeWidth="0dp"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:backgroundTint="@color/blue_button"
            android:layout_alignParentEnd="true"
            >
            <TextView
                android:id="@+id/gameType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Squad"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:fontFamily="@font/airbnbcereal_md"
                />
        </com.google.android.material.card.MaterialCardView>
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="65dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entry Fee : "
                android:textSize="12sp"
                android:textColor="@color/text_color_grey"
                android:fontFamily="@font/airbnbcereal_bk"
                />
            <com.google.android.material.card.MaterialCardView
                android:layout_width="90dp"
                android:layout_height="40dp"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="5dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/green_background_color"
                >
                <TextView
                    android:id="@+id/entryFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Free"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:fontFamily="@font/airbnbcereal_md"
                    />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>