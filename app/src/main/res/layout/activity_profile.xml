<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProfileActivity"
    android:background="@color/background_color"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/backButton"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="@color/white"
            app:strokeWidth="0dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/arrowleft"
                android:layout_margin="10dp"
                />
        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="16sp"
            android:fontFamily="@font/airbnbcereal_md"
            android:layout_centerInParent="true"
            android:textColor="@color/text_color_black"
            />
        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/edit"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            />
    </RelativeLayout>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:cardCornerRadius="45dp"
        app:strokeWidth="0dp"
        android:layout_gravity="center_horizontal"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bgmi"
            android:scaleType="centerCrop"
            />
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Name"
        android:textSize="20sp"
        android:fontFamily="@font/airbnbcereal_md"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User ID : "
            android:textColor="@color/text_color_grey"
            android:fontFamily="@font/airbnbcereal_bk"
            android:textSize="12sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="488276"
            android:textColor="@color/text_color_black"
            android:fontFamily="@font/airbnbcereal_md"
            android:textSize="16sp"
            />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account"
        android:textSize="18sp"
        android:textColor="@color/text_color_black"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/airbnbcereal_md"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:id="@+id/icon1"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/freinds"
            android:layout_centerVertical="true"
            android:padding="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friends"
            android:layout_toRightOf="@id/icon1"
            android:textSize="16sp"
            android:fontFamily="@font/airbnbcereal_bk"
            android:textColor="@color/text_color_black"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/arrowrightgrey"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/border_color_grey"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="20dp"
        >
        <ImageView
            android:id="@+id/icon6"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/detail"
            android:layout_centerVertical="true"
            android:padding="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game detail"
            android:layout_toRightOf="@id/icon6"
            android:textSize="16sp"
            android:fontFamily="@font/airbnbcereal_bk"
            android:textColor="@color/text_color_black"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/arrowrightgrey"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/border_color_grey"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="20dp"
        >
        <ImageView
            android:id="@+id/icon2"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/withdrawhistory"
            android:layout_centerVertical="true"
            android:padding="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Withdraw History"
            android:layout_toRightOf="@id/icon2"
            android:textSize="16sp"
            android:fontFamily="@font/airbnbcereal_bk"
            android:textColor="@color/text_color_black"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/arrowrightgrey"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/border_color_grey"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="20dp"
        >
        <ImageView
            android:id="@+id/icon3"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/withdrawmethod"
            android:layout_centerVertical="true"
            android:padding="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Withdraw Method"
            android:layout_toRightOf="@id/icon3"
            android:textSize="16sp"
            android:fontFamily="@font/airbnbcereal_bk"
            android:textColor="@color/text_color_black"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/arrowrightgrey"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/border_color_grey"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="20dp"
        >
        <ImageView
            android:id="@+id/icon4"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/changepassword"
            android:layout_centerVertical="true"
            android:padding="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:layout_toRightOf="@id/icon4"
            android:textSize="16sp"
            android:fontFamily="@font/airbnbcereal_bk"
            android:textColor="@color/text_color_black"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/arrowrightgrey"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/border_color_grey"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="20dp"
        >
        <ImageView
            android:id="@+id/icon5"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/email"
            android:layout_centerVertical="true"
            android:padding="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Email"
            android:layout_toRightOf="@id/icon5"
            android:textSize="16sp"
            android:fontFamily="@font/airbnbcereal_bk"
            android:textColor="@color/text_color_black"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/arrowrightgrey"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/border_color_grey"
        />

</LinearLayout>