<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FA"
    android:layout_height="match_parent"
    tools:context=".Activity.LoginActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="0dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello Again!"
                android:fontFamily="@font/airbnbcereal_md"
                android:textSize="28sp"
                android:textColor="@color/text_color_black"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome Back Youâ€™ve Been Missed!"
                android:textSize="16sp"
                android:fontFamily="@font/airbnbcereal_bk"
                android:textColor="@color/text_color_grey"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Address"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/airbnbcereal_md"
                android:textSize="16sp"
                android:textColor="@color/text_color_black"
                android:layout_marginTop="40dp"
                />
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                app:cardCornerRadius="10dp"
                app:strokeWidth="0dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/white"
                android:outlineSpotShadowColor="@color/white"
                >
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/email_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="52dp"
                    app:boxStrokeWidth="0dp"
                    app:helperTextTextColor="#FF0000"
                    app:hintEnabled="false"
                    android:paddingLeft="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    >
                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="52dp"
                        android:background="@color/white"
                        android:hint="example@xyz.com"
                        android:textColor="@color/text_color_black"
                        android:textColorHint="@color/text_color_grey"
                        android:textSize="14sp"
                        android:fontFamily="@font/airbnbcereal_bk"
                        android:textColorHighlight="#5B9EE1" />
                </com.google.android.material.textfield.TextInputLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:layout_marginLeft="20dp"
                android:textSize="16sp"
                android:textColor="@color/text_color_black"
                android:layout_marginTop="20dp"
                />
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                app:strokeWidth="0dp"
                android:outlineSpotShadowColor="@color/white"
                app:cardCornerRadius="10dp"
                >
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/password_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="52dp"
                    app:boxStrokeWidth="0dp"
                    app:helperTextTextColor="#FF0000"
                    app:passwordToggleEnabled="true"
                    android:background="@color/white"
                    app:passwordToggleTint="#707B81"
                    app:hintEnabled="false"
                    android:paddingStart="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="52dp"
                        android:hint="Enter your password"
                        android:background="@color/white"
                        android:textSize="14sp"
                        android:textColor="@color/text_color_black"
                        android:textColorHint="@color/text_color_grey"
                        android:fontFamily="@font/airbnbcereal_bk"
                        android:inputType="textPassword"
                        android:textColorHighlight="#5B9EE1"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password?"
                android:layout_gravity="right"
                android:textSize="13sp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/blue_text"
                />
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/blue_button"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="10dp"
                app:strokeWidth="0dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:textSize="18dp"
                    />
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/loginGuest"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="10dp"
                app:strokeWidth="0dp"
                android:backgroundTint="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login as Guest"
                    android:fontFamily="@font/airbnbcereal_md"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:textColor="@color/text_color_grey"
                    />
            </com.google.android.material.card.MaterialCardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="30dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don't have account?"
                    android:textSize="12dp"
                    android:textColor="@color/text_color_grey"
                    android:fontFamily="@font/poppins_semibold"
                    />
                <TextView
                    android:id="@+id/register_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Register for free"
                    android:textSize="12dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/blue_text"
                    android:fontFamily="@font/poppins_semibold"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>